{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ExternalApi": {
    "CrmServer": {
      "BaseUrl": "https://www.crmserver.com/",
      "TimeoutSeconds": 30
    },
    "Token": {
      "Algorithm": "SHA256",
      "Secret": "your-token-secret-key-here",
      "ExpiryMinutes": 60,
      "IncludeTimestamp": true
    }
  }
}
